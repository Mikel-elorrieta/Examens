<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvBooking"
        android:layout_width="361dp"
        android:layout_height="81dp"
        android:text="Lokala:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKioskoa"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:text="Deskripzioa:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEsperaEstimado"
        android:layout_width="359dp"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:text="Itxarote-denbora:"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvTxandaZenbakia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:text="Zure txanda zenbakia:"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvTurno"
        android:layout_width="364dp"
        android:layout_height="103dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textSize="64sp"
        android:textStyle="bold|italic" />

    <org.osmdroid.views.MapView
        android:id="@+id/mapa"
        android:layout_width="wrap_content"
        android:layout_height="178dp" />

    <Button
        android:id="@+id/btnScanQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="QR eskaneatu" />

    <Button
        android:id="@+id/btnDejarCola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        android:text="Ilara utxi" />
</LinearLayout>
